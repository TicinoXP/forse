<html>
  {{> head}}
  <body>
    {{> body}}
    {{> social}}
    {{> footer}}
    <script src="//code.jquery.com/jquery-2.1.0.min.js"></script>
    <script>
      var displayTip = function (text) {
        $("#tip").fadeOut(200, function () {
          $(this).html(text).fadeIn(200);
        });
      };

      var getTip = function () {
        $.ajax("{{apiEndpoint}}")
        .done(function (data) {
          displayTip(data.tip);
        })
        .fail(function () {
          displayTip("{{defaultTip}}");
        });  
      }

      $(document)
        .ready(getTip)
        .click(getTip)
        .keypress(function (e) {
          if ($.inArray(e.keyCode, [13, 32])) {
            getTip();
          }
        });
    </script>
    {{> analytics}}
  </body>
</html>
